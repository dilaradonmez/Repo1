@model MVC_Layout.Models.Customers
@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateCustomer</h2>
<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" value="@Model.CompanyName" name="CompanyName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Contact Name</label>
            <input type="text" value="@Model.ContactName" name="ContactName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" value="@Model.Address" name="Adress" class="form-control" />
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" value="@Model.City" name="City" class="form-control" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="text" value="@Model.Phone" name="Phone" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>